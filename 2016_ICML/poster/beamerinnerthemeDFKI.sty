\defbeamertemplate{enumerate item}{DFKI}
{
  \usebeamerfont*{item projected}%
  \usebeamercolor[bg]{item projected}%
  \raisebox{.5ex}{
  \begin{pgfpicture}{0ex}{0ex}{1ex}{1ex}
    \pgfpathcircle{\pgfpoint{.5ex}{.75ex}}{.75ex}
    \pgfusepath{fill}
    \pgftext[base,x=.5ex]{\color{fg}\raisebox{.125ex}{\tiny\insertenumlabel}}
  \end{pgfpicture}%
}
}
[action]
{\setbeamerfont{item projected}{size=\scriptsize}}

\defbeamertemplate{enumerate subitem}{DFKI}
{
  \raisebox{.5ex}{%
    \usebeamerfont*{subitem projected}%
    \usebeamercolor[bg]{subitem projected}%
    \vrule width1.2ex height1.2ex depth0ex%
    \hskip-1.2ex%
    \hbox to1.2ex{%
      \hfil%
      \color{fg}\tiny\insertsubenumlabel%
      \hfil}%
}%
}

\defbeamertemplate{enumerate subsubitem}{DFKI}
{
  \usebeamerfont*{subsubitem projected}%
  \usebeamercolor[bg]{subsubitem projected}%
  \raisebox{.25ex}{
  \begin{pgfpicture}{0ex}{0ex}{1ex}{1ex}
    \pgfpathcircle{\pgfpoint{0pt}{.75ex}}{.75ex}
    \pgfusepath{fill}
    \pgftext[base]{\color{fg}\raisebox{.125ex}{\tiny\insertsubsubenumlabel}}
  \end{pgfpicture}%
}
}

\defbeamertemplate{enumerate mini template}{DFKI}
{
  \usebeamerfont*{\beameritemnestingprefix item projected}%
  \usebeamercolor[bg]{\beameritemnestingprefix item projected}%
  \raisebox{.25ex}{
  \begin{pgfpicture}{-1ex}{0ex}{1ex}{2ex}
    \pgfpathcircle{\pgfpoint{0pt}{.75ex}}{1.2ex}
    \pgfusepath{fill}
    \pgftext[base]{\color{fg}\insertenumlabel}
  \end{pgfpicture}%
}
}

